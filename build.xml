<project name="beam-ebooks-metadata-plugin" default="install">

	<property name="version" value="1.0.0" />

	<target name="package">

		<zip basedir="${basedir}" destfile="${ant.project.name}-${version}.zip">
			<include name="*.txt" />
			<include name="*.py" />
			<include name="images" />
		</zip>

	</target>

	<target name="install" depends="package">
		<exec osfamily="Windows" executable="calibre-customize">
			<arg value="-a" />
			<arg value="${ant.project.name}-${version}.zip" />
		</exec>
	</target>

</project>
